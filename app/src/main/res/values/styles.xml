<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButton">
        <item name="android:layout_width">@dimen/spacing_0</item>
        <item name="android:layout_height">@dimen/spacing_0</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginEnd">@dimen/spacing_2</item>
        <item name="android:layout_marginStart">@dimen/spacing_2</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="CalculatorButton.NumericButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/button_selector</item>
        <item name="android:background">@drawable/stone2</item>
        <item name="backgroundTintMode">src_atop</item>
    </style>

    <style name="CalculatorButton.FuncButton" parent="CalculatorButton">
        <item name="backgroundTint">@color/button_selector</item>
        <item name="android:background">@drawable/stone1</item>
        <item name="backgroundTintMode">src_atop</item>
    </style>

    <style name="CalculatorButton.FuncButton.Landscape" parent="CalculatorButton">
        <item name="backgroundTint">@color/calc_button_blue</item>
    </style>

    <style name="display_text">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/display_text</item>
    </style>

</resources>